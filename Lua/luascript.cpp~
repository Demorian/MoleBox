#include "luascript.h"
// extracts a table into a std::map with provided types

bool TypeCheck(lua_State *L,int index,int type) {

  return lua_type(L,-1) == type;
  
}

void HandelError(int status) {
  
  if ( status!=0 ) {
    
    std::cerr << "Script error: " << lua_tostring(this->L, -1) << std::endl;

    lua_pop(this->L, 1); // remove error message
    
  }
  
}

template <class K,class Y> std::map<K,Y> LuaMapTable(lua_State *L,std::string name,int valueType,int keyType) {
  
  lua_getglobal(L,name.c_str());
  
  if ( lua_istable(L,-1) )
  {
    for (lua_pushnil(L);lua_next(L,-2);lua_pop(L,1) )
    {
      if ( TypeCheck(L,-1,valueType) ) {
	throw std::string("Value type for" + name + " was not expected");
      }
      if ( TypeCheck(L,-1,keyType) ) {
	throw std::string("Key type for" + name + " was not expected");
      }

    } 
  }
  else
  {
    throw std::string(name + " is not a table");
  }  
  
}
 
LuaScript::LuaScript(std::string file)
{
 this->L = lua_open();
 luaL_openlibs(this->L);
 
 int success = luaL_loadfile(this->L,file.c_str());
 this->HandelError(success);
 
 // run script to initalise it.
 success = lua_pcall(this->L,0,0,0);
 this->HandelError(success);
}

LuaScript::~LuaScript()
{

}

bool LuaScript::TypeCheck(int index, int type)
{
  return lua_type(L,-1) == type;
}


void LuaScript::GetTable(std::string name,int valueType,int keyType)
{
  lua_getglobal(this->L,name.c_str());
  
  if ( lua_istable(this->L,-1) )
  {
    for (lua_pushnil(L);lua_next(L,-2);lua_pop(L,1) )
    {
      if ( this->TypeCheck(-1,valueType) ) {
	throw std::string("Value type for" + name + " was not expected");
      }
      if ( this->TypeCheck(-1,keyType) ) {
	throw std::string("Key type for" + name + " was not expected");
      }

    } 
  }
  else
  {
    throw std::string(name + " is not a table");
  }
}


void LuaScript::HandelError(int status)
{
  if ( status!=0 ) {
    std::cerr << "Script error: " << lua_tostring(this->L, -1) << std::endl;
    lua_pop(this->L, 1); // remove error message
  }
}


